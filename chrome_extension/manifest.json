{
  "manifest_version": 3,
  "name": "Claim Verifier — Agentic RAG",
  "description": "Highlight any text on the web → Verify claim → Get verdict with citations",
  "version": "1.0.0",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
